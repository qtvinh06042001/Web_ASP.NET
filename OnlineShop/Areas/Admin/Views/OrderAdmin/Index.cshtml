@model OnlineShop.Areas.Order_OrderDetail

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách sản phẩm </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="table-control col-sm-12 col-md-6">
                        
                    </div>
                    <div class="table-control col-sm-12 col-md-6 text-right">
                        
                        <a class="btn exportByByte">
                            @using (Html.BeginForm("Export", "OrderAdmin", FormMethod.Post))
                            {
                                <input type="submit" value="Xuất hóa đơn" />
                            }
                        </a>
                    </div>
                </div>

                <div id="dataTables_wrapper" class="dataTables_wrapper">
                    <table class="table">
                        <thead>
                            <tr>

                                <th>
                                    <p>Tên</p>
                                </th>
                                <th>
                                    <p>Thời gian đặt hàng</p>
                                </th>
                                <th>
                                    <p>SDT</p>
                                </th>
                                <th>
                                    <p>Địa chỉ</p>
                                </th>
                                <th>
                                    <p>Trạng thái</p>
                                </th>
                                <th>
                                    Thao tác
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.lstOrder)
                            {
                            <tr>

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.CreateOnUtc
                                </td>
                                <td>
                                    @item.Phone
                                </td>
                                <td>
                                    @item.Adress
                                </td>
                                <td>
                                    @{
                                        var stt = "";
                                        if (item.Status == 1)
                                        {
                                            stt = "Đã thanh toán";
                                        }
                                        else
                                        {
                                            stt = "Chưa thanh toán";
                                        }
                                    }
                                    @stt
                                </td>

                                <td>
                                    <a title="Xem chi tiết" class="btn btn-sm btn-outline-secondary btn-hover-success quickUpdate" href="~/Admin/OrderAdmin/Details/@item.Id">
                                        <i class="fas fa-fw fa-info"></i>
                                    </a>
                                    <a title="Xóa" class="btn btn-sm btn-outline-secondary btn-hover-danger quickDelete" href="~/Admin/OrderAdmin/Delete/@item.Id">
                                        <i class="fas fa-fw fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


