@model IEnumerable<OnlineShop.Context.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách tin tức</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="table-control col-sm-12 col-md-6">
                        
                    </div>
                    <div class="table-control col-sm-12 col-md-6 text-right">
                        <a class="btn btn-success quickUpdate" href="~/Admin/NewAdmin/Create">
                            <i class="fas fa-fw fa-plus"></i><span>Thêm mới</span>
                        </a>
                    </div>
                </div>

                <div id="dataTables_wrapper" class="dataTables_wrapper">
                    <table class="table">
                        <thead>
                            <tr>

                                <th>
                                    Tên
                                </th>
                                <th>
                                    Mô tả ngắn
                                </th>
                               
                                <th width="150">
                                    Thao tác
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShortDes)
                                    </td>
                                    
                                    <td width="150">
                                        <a title="Xem chi tiết" class="btn btn-sm btn-outline-secondary btn-hover-success quickUpdate" href="~/Admin/NewAdmin/Details/@item.Id">
                                            <i class="fas fa-fw fa-info"></i>
                                        </a>
                                        <a title="Sửa" class="btn btn-sm btn-outline-secondary btn-hover-info quickUpdate" href="~/Admin/NewAdmin/Edit/@item.Id">
                                            <i class="fas fa-fw fa-edit"></i>
                                        </a>
                                        <a title="Xóa" class="btn btn-sm btn-outline-secondary btn-hover-danger quickDelete" href="~/Admin/NewAdmin/Delete/@item.Id">
                                            <i class="fas fa-fw fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

