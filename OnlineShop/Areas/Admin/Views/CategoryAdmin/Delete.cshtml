@model OnlineShop.Context.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_Layout.cshtml";
}

<div class="modal-header bg-success">
    <h3 class="modal-title" id="planCreateModalTitle">Xóa danh mục @Model.Name</h3>
</div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Id" />
<div class="modal-body">

    <div class="row">
        <div class="col-md-6">

            
            <div class="form-group row">
                <label class="col-sm-4 col-form-label input-required">Ảnh</label>
                <div class="col-sm-8">
                    @{
                        string ImagePath = "~/Content/images/" + Model.Avatar;
                    }
                    <img src="@Url.Content(ImagePath)" width="300" class="img-thumbnail" />
                </div>
            </div>

        </div>
        <!--./col-->
        <!-- Col -->
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label input-required">Tên danh mục</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="@Model.Name" disabled />
                </div>
            </div>
        </div>
        <!--./col-->
    </div>
    <!--./row-->
</div>

@using (Html.BeginForm("Delete", "CategoryAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="modal-footer">
    <input type="submit" value="Xóa" class="btn btn-danger" />
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>
}

