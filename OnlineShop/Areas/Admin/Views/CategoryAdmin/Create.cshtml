@model OnlineShop.Context.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "CategoryAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header bg-success">
        <h3 class="modal-title">Thêm danh mục <span style="color:red">@ViewBag.Message</span></h3>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">

                <div class="form-group row">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-4 col-form-label input-required" })
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                

            </div>
            <!--./col-->
            <!-- Col -->
            <div class="col-md-6">
                <div class="form-group row">
                    @Html.LabelFor(model => model.Avatar, htmlAttributes: new { @class = "col-sm-4 col-form-label input-required" })
                    <div class="col-sm-8">
                        <input type="file" name="ImageUpload" />
                    </div>
                </div>
                
            </div>
            <!--./col-->
        </div>
        <!--./row-->
    </div>
    <div>
    </div>
    <div class="modal-footer">
        @Html.ActionLink("Trở lại danh sách", "Index")
        <input type="submit" value="Thêm" class="btn btn-outline-primary quickSubmit" />

    </div>
    

}


