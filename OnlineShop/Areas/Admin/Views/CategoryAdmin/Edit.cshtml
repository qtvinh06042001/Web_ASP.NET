@model OnlineShop.Context.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_Layout.cshtml";
}

<h2>Sửa danh mục</h2>

@using (Html.BeginForm("Edit", "CategoryAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-header bg-success">
        <h3 class="modal-title" id="planCreateModalTitle">Sửa danh mục @Model.Name</h3>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label input-required">Ảnh</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Avatar, null, new { type = "file", @class = "form-control" })
                        <img src="~/Content/images/@Model.Avatar" width="200" class="img-thumbnail" />
                        @Html.Hidden("oldimage", @Model.Avatar)
                        @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <!--./col-->
            <!-- Col -->
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label input-required">Tên danh mục</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div> 
            </div>
            <!--./col-->
        </div>
        <!--./row-->
    </div>
    <div>

    </div>
    <div class="modal-footer">
        @Html.ActionLink("Trở lại danh sách", "Index")
        <input type="submit" value="Lưu" class="btn btn-outline-primary quickSubmit" />

    </div>
}


