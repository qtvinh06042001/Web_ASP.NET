@model OnlineShop.Models.Product_Category
@{
    ViewBag.Title = "Product";
}
<div class="header_bottom">
    <div class="menu">
        <ul>
            <li><a href="~/Home/Index">Trang chủ</a></li>
            <li><a href="~/About/Index">Thông tin</a></li>
            <li><a href="~/News/Index">Tin tức</a></li>
            <li><a href="~/Contact/Index">Liên hệ</a></li>
            <li class="active"><a href="~/Home/AllProduct">Sản phẩm</a></li>

        </ul>
    </div>
    <div class="search_box">
        @using (Html.BeginForm())
        {
            <form>
                @Html.TextBox("SearchString")<input type="submit" value="" />
            </form>
        }
    </div>
    <div class="clear"></div>
</div>
<div class="main">
    <div class="content">

        <div class="section group">
            @foreach (var item in Model.ListProduct)
            {
                <div style="margin:10px 10px 0 0 ; width:250px; height:350px" class="grid_1_of_4 images_1_of_4">
                    <a href="~/Product/Index/@item.Id"><img width="250" height="250" src="~/Content/images/@item.Avatar" alt=""></a>
                    <h2 style="height:40px; " >
                        <span style="vertical-align: middle">@Html.ActionLink(item.Name, "Index", "Product", new { Id = item.Id }, null)</span>
                    </h2>
                    <div class="price-details">
                        <div class="price-number">
                            @{
                                string tien = "";
                                int price = (int)item.Price;
                                tien = price.ToString("#,##0");
                            }
                            <p><span class="rupees">@tien đ</span></p>
                        </div>
                        @*<div class="add-cart">
                                <h4><a href="preview.html">Add to Cart</a></h4>
                            </div>*@
                        <div class="clear"></div>
                    </div>

                </div>
            }

        </div>

    </div>
</div>

