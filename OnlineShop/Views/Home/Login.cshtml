@model OnlineShop.Context.Users
@{
    ViewBag.Title = "Login";
}
<style>
    #login {
        background-color: limegreen;
        border: none;
        color: black;
        width: 100%;
        padding: 10px 0;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
    }
    #Password {
        padding: 8px !important;
        margin: unset !important;
        width: 40% !important;
    }
</style>
<div class="main">
    <div class="content">
        <div class="section group">
            <div class="col span_2_of_3">
                <h2 id="login">Đăng nhập</h2>
                <hr />
                <div  class="contact-form">


                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                    <div align="center">
                        <div class="form-group" style="width: 41% !important;">
                            @*@Html.LabelFor(m => m.Email)*@
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.Password)<br />*@
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                            </div>
                        </div>
                        <div style="color:red">@ViewBag.error</div>
                        <div>
                            @ViewBag.error
                        </div>
                        <div class="form-group">
                            <input align="center" type="submit" name="submit" class="btn btn-primary" value="Đăng nhập" style="right: 230px; " />
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>            
    </div>   
</div>

