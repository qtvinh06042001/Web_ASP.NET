@model List<OnlineShop.Context.News>
@{
    ViewBag.Title = "Index";
}
<div class="header_bottom">
    <div class="menu">
        <ul>
            <li><a href="~/Home/Index">Trang chủ</a></li>
            <li><a href="~/About/Index">Thông tin</a></li>
            <li class="active"><a href="~/News/Index">Tin tức</a></li>
            <li><a href="~/Contact/Index">Liên hệ</a></li>
            <li><a href="~/Home/AllProduct">Sản phẩm</a></li>

        </ul>
    </div>
    <div class="search_box">
        
    </div>
    <div class="clear"></div>
</div>
        <div class="main">
            <div class="content">
                @foreach (var item in Model)
                {

                <div class="image group">
                    <div class="grid images_3_of_1">
                        <img src="~/Content/images/@item.Avatar" alt="" />
                    </div>
                    <div class="grid news_desc">
                        <h3>@item.Name </h3>
                        <h4>
                            @*@{
                                var time = DateTime.;
                            }
                            Posted on @time*@
                        </h4>
                        <p>@item.ShortDes</p>
                        <p>@item.FullDescription</p>
                    </div>
                </div>
                }
            </div>
        </div>




